<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.asaria.tictactoe.board">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="X"

                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="O"

                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/playerX"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/playerO"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:onClick="clickedBtn1"
            android:id="@+id/btn1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:onClick="clickedBtn2"
            android:id="@+id/btn2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:onClick="clickedBtn3"
            android:id="@+id/btn3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:onClick="clickedBtn4"
            android:id="@+id/btn4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:onClick="clickedBtn5"
            android:id="@+id/btn5"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:onClick="clickedBtn6"
            android:id="@+id/btn6"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:onClick="clickedBtn7"
            android:id="@+id/btn7"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:onClick="clickedBtn8"
            android:id="@+id/btn8"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:onClick="clickedBtn9"
            android:id="@+id/btn9"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <Button
        android:onClick="clickedBtnReset"
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="reset"/>
</LinearLayout>
